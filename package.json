{
  "name": "mern-boilerplate",
  "version": "1.0.0",
  "description": "Two repository structure",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./",
    "build": "webpack --mode production",
    "test": "jest -i --verbose --coverage --runInBand",
    "start": "npm run build && node -r esm src/bin/www",
    "client": "webpack-dev-server --mode development --open --devtool inline-source-map --hot",
    "server": "nodemon -r esm src/bin/www",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dboff": "killall mongod",
    "dbon": "mongod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
